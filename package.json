{
  "name": "packetjs-di",
  "version": "2.0.0",
  "description": "Packet.js DI, a lightweight and powerful Dependency Injection container, written in TypeScript and made for JavaScript applications like Node.js, Angular, React, Vue, Vanilla JS, TypeScript, etc., and for efficient management of dependencies, with features like lazy loading, middleware management, and caching.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "npm run build:js && npm run build:dts",
    "build:js": "babel src --out-dir lib --extensions '.ts' --ignore '**/*.test.ts' --ignore '**/@types' --source-maps",
    "build:ts": "tsc --diagnostics --declaration --emitDeclarationOnly --skipLibCheck --outDir lib src/index",
    "build:dts": "rollup -c",
    "build:docu": "markdown-include docs/markdown.json",
    "lint": "eslint --ext .js,.ts ./",
    "prepare": "husky install",
    "sandbox-cicd": "node sandbox/ci-cd/index.js",
    "sandbox-lib": "nodemon sandbox/lib/index.js",
    "sandbox-ts": "nodemon sandbox/src/index.ts --watch sandbox/common/sandbox.js --watch sandbox/src/index.ts --watch src/*",
    "test-all": "npm run sandbox-cicd && npm run test && npm run test-lib && npm run test-integration && npm run test-integration-lib && npm run lint",
    "test": "jest test/unit/src",
    "test-watch": "jest --watch test/unit/src",
    "test-lib": "bash ./scripts/prettier.sh && jest test/unit/lib",
    "test-lib-watch": "bash ./scripts/prettier.sh && jest --watch test/unit/lib",
    "test-integration": "jest test/integration/src",
    "test-integration-watch": "jest --watch test/integration/src",
    "test-integration-lib": "bash ./scripts/prettier.sh && jest test/integration/lib",
    "test-integration-lib-watch": "bash ./scripts/prettier.sh && jest --watch test/integration/lib"
  },
  "author": "Francisco Ruiz",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fdosruiz/packetjs.git"
  },
  "engines": {
    "node": ">=8.6.0"
  },
  "keywords": [
    "cache",
    "caching",
    "container",
    "dependency",
    "dependency-injection",
    "dependency-injection-container",
    "di",
    "injection",
    "javascript",
    "js",
    "lazy",
    "lazy-loading",
    "memcached",
    "memo",
    "memoization",
    "memoize",
    "memoizer",
    "middleware",
    "node",
    "nodejs",
    "pimple",
    "proxy"
  ],
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.18.6",
    "@babel/core": "^7.18.6",
    "@babel/preset-env": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.0.6",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "@types/jest": "^28.1.4",
    "@types/uniqid": "^5.3.4",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "babel-jest": "^28.1.2",
    "babel-plugin-add-module-exports": "^1.0.4",
    "babel-preset-minify": "^0.5.2",
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "core-js": "^3.23.4",
    "coveralls": "^3.1.1",
    "eslint": "^8.20.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.6.0",
    "eslint-plugin-n": "^15.2.4",
    "eslint-plugin-promise": "^6.0.0",
    "husky": "^8.0.1",
    "jest": "^28.1.2",
    "markdown-include": "^0.4.3",
    "nodemon": "^3.1.4",
    "prettier": "3.3.2",
    "rollup": "^4.20.0",
    "rollup-plugin-dts": "^6.1.1",
    "semantic-release": "^24.0.0",
    "ts-jest": "^28.0.8",
    "ts-node": "^10.9.2",
    "typescript": "^4.7.4",
    "uniqid": "^5.4.0"
  }
}
